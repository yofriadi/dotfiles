        mode_session "#[bg=$hl_low,fg=$love]#[bg=$love,fg=$hl_low,bold]SESSION "
        mode_prompt "#[bg=$hl_low,fg=$love]#[bg=$love,fg=$hl_low,bold]PROMPT "
        mode_fullscreen "#[bg=$hl_low,fg=$love]#[bg=$love,fg=$hl_low,bold]FULLSCREEN "

        tab_normal "#[bg=$iris,fg=$text,bold] {index} #[bg=$hl_med,fg=$text,bold] {name} {floating_indicator}"
        tab_normal_fullscreen "#[bg=$iris,fg=$text,bold] {index} #[bg=$hl_med,fg=$text,bold] {name} {fullscreen_indicator}"
        tab_normal_sync "#[bg=$iris,fg=$text,bold] {index} #[bg=$hl_med,fg=$text,bold] {name} {sync_indicator}"
        tab_active "#[bg=$gold,fg=$text,bold] {index} #[bg=$hl_med,fg=$text,bold] {name} {floating_indicator}"
