        mode_pane "#[bg=$hl_low,fg=$love]#[bg=$love,fg=$hl_low,bold]PANE "
        mode_tab "#[bg=$hl_low,fg=$love]#[bg=$love,fg=$hl_low,bold]TAB "
        mode_scroll "#[bg=$hl_low,fg=$love]#[bg=$love,fg=$hl_low,bold]SCROLL "
        mode_enter_search "#[bg=$hl_low,fg=$love]#[bg=$love,fg=$hl_low,bold]ENT-SEARCH "
