        mode_normal "#[bg=$hl_low,fg=$love]#[bg=$love,fg=$hl_low,bold]NORMAL "
        mode_tmux "#[bg=$hl_low,fg=$love]#[bg=$love,fg=$hl_low,bold]TMUX "
